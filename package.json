{
  "name": "@centralstandard/colors",
  "version": "1.1.0",
  "description": "",
  "keywords": [
    "colors"
  ],
  "homepage": "https://github.com/centralstandard/colors#readme",
  "bugs": {
    "url": "https://github.com/centralstandard/colors/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/centralstandard/colors.git"
  },
  "license": "ISC",
  "author": "Jeremy Boles <jeremy@centralstandard.com> (https://jeremyboles.com/)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist/colors.json",
    "dist/index.css",
    "dist/index.d.ts",
    "dist/index.js"
  ],
  "scripts": {
    "build": "npm-run-all --serial build:fetch build:dist",
    "build:dist": "npm-run-all --parallel  build:dist:compile build:dist:definitions build:dist:static",
    "build:dist:compile": "babel --extensions '.ts' --ignore '**/*.test.ts','**/__mocks__/**' --out-dir ./dist ./.generated",
    "build:dist:definitions": "tsc --declaration --outDir ./dist ./.generated/index.ts",
    "build:dist:static": "copyfiles --flat .generated/colors.json .generated/index.css dist",
    "build:fetch": "npm-run-all --serial build:fetch:compile build:fetch:run",
    "build:fetch:compile": "babel --extensions '.ts' --out-dir ./.scripts ./src",
    "build:fetch:run": "node .scripts/fetch.js",
    "prepare": "husky install",
    "pretest": "npm run build:fetch",
    "test": "jest",
    "release": "semantic-release"
  },
  "dependencies": {
    "@centralstandard/figma-tokens": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/nunjucks": "^3.1.4",
    "copyfiles": "^2.4.1",
    "dotenv": "^10.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "liquidjs": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "engines": {
    "node": ">=14"
  }
}
